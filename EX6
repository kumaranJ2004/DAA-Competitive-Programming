#include <stdio.h>

int main() {
    int n;
    scanf("%d", &n);  
    
    int arr[n];
    for (int i = 0; i < n; i++)
        scanf("%d", &arr[i]);
    
    int k;
    scanf("%d", &k);  
    
    int i = 0, j = 1;
    int found = 0;
    
    
    while (i < n && j < n) {
        int diff = arr[j] - arr[i];
        
        if (diff == k && i != j) {
            found = 1;
            break;
        }
        else if (diff < k)
            j++; 
        else
            i++;  
    }
    
    printf("%d\n", found);
    return 0;
}
